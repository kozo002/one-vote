<li class="choice {{if isVoted "active"}}">
  <div class="choice__bg">
    {{#if isAnyVoted}}
      <div class="choice__rate-bar-wrapper">
        <div class="choice__rate-bar" style={{rateBarWidth}}></div>
      </div>
    {{/if}}
  </div>
  <div class="choice__fg">
    <a href="#" {{action "vote" choice}} disabled={{isDisabled}}>{{choice.body}}</a>
    {{#if isVoted}}
      <i class="choice__mark material-icons text-primary">check</i>
    {{/if}}
    {{#if isAnyVoted}}
      <div class="choice__rate-number">{{choice.rate}}%</div>
    {{/if}}
  </div>
</li>
